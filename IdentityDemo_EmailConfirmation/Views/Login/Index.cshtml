@model IdentityDemo.Models.Login

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />

@using (Html.BeginForm("index","Login",FormMethod.Post, new { @class= "form-horizontal" }))
{

   @Html.AntiForgeryToken()
    
    <div class="form-group">
        <div class="col-sm-2 hidden-xs">
            @Html.LabelFor(m => m.Username, new { })
        </div>
        <div class="col-sm-10 col-xs-12">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", })
        </div>
        <div class="validation-error col-xs-12">
            @Html.ValidationMessageFor(m => m.Username)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2 hidden-xs">
            @Html.LabelFor(m => m.Password, new { })
        </div>
        <div class="col-sm-10 col-xs-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", })
        </div>
        <div class="validation-error col-xs-12">
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe) Remember me
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 col-xs-12">
            <input type="submit" value="Login" class="btn btn-default" />
            <a href="@Url.Action("Index","Register")">Register</a>
        </div>
        <div class="col-sm-offset-2 col-sm-10">
            @ViewBag.ErrorMessage
        </div>
    </div>
}